// tsconfig.json - Make sure this file exists and is committed to Git
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node", // Crucial for finding packages in node_modules
    "jsx": "react-jsx",         // Crucial for React 17+ JSX transform
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true, // This is fine if you just want to type check
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"]
}