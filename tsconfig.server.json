{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmitOnError": false
  },
  "include": [
    "index.ts",
    "types/**/*",
    "const/**/*"
  ],
  "exclude": [
    "node_modules",
    "react-viewer",
    "react-viewer/**"
  ]
}
